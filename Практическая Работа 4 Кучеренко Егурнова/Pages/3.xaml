<Page x:Class="Практическая_Работа_4_Кучеренко_Егурнова.Pages._3"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Практическая_Работа_4_Кучеренко_Егурнова.Pages"
      xmlns:charts="clr-namespace:System.Windows.Forms.DataVisualization.Charting;assembly=System.Windows.Forms.DataVisualization"
      mc:Ignorable="d" 
      d:DesignHeight="400" d:DesignWidth="600"
      Title="_3">

    <Grid>

        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="200"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <Grid.RowDefinitions>
            <RowDefinition Height="105"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <Grid.Background>
            <LinearGradientBrush StartPoint="0,0" EndPoint="1,2">
                <GradientStop Color="#68fc79" Offset="0.2" />
                <GradientStop Color="#6bfffa" Offset="0.5" />
            </LinearGradientBrush>
        </Grid.Background>


        <Image Source="/Images/задание 3.png" Width="300" Height="100"  HorizontalAlignment="Center" Grid.Row="0" Grid.Column="1" Margin="0 10 0 0"/>

        <Grid Grid.Row="1" Grid.Column="0" Margin="19,0,10,0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="40"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <Grid.RowDefinitions>
                <RowDefinition Height="25"/>
                <RowDefinition Height="25"/>
                <RowDefinition Height="25"/>
                <RowDefinition Height="25"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>


            <TextBlock Text="x" HorizontalAlignment="Center" VerticalAlignment="Center" Grid.Column="0" Grid.Row="0" FontSize="16"/>
            <TextBox x:Name="xValue" Height="20" Grid.Column="1" Grid.Row="0" FontSize="16" Margin="28,2,10,3"/>

            <TextBlock Text="a" HorizontalAlignment="Center" VerticalAlignment="Center" Grid.Column="0" Grid.Row="1" FontSize="16"/>
            <TextBox x:Name="aValue" Height="20" Grid.Column="1" Grid.Row="1" FontSize="16" Margin="28,3,10,2"/>

            <TextBlock Text="b" HorizontalAlignment="Center" VerticalAlignment="Center" Grid.Column="0" Grid.Row="2" FontSize="16"/>
            <TextBox x:Name="bValue" Height="20" Grid.Column="1" Grid.Row="2" FontSize="16" Margin="28,2,10,3"/>

            <TextBlock Text="c" HorizontalAlignment="Center" VerticalAlignment="Center" Grid.Column="0" Grid.Row="3" FontSize="16"/>
            <TextBox x:Name="cValue" Height="20" Grid.Column="1" Grid.Row="3" FontSize="16" Margin="28,3,10,2"/>

            <TextBlock Text="Ответ" HorizontalAlignment="Center" VerticalAlignment="Top" Grid.Column="0" Grid.Row="4" FontSize="16"/>
            <TextBox x:Name="Otvet" Height="110" VerticalAlignment="Top" Grid.Column="1" Grid.Row="4" Margin="28,5,10,0" FontSize="16"/>
        </Grid>

        <StackPanel Grid.Column="0" Grid.Row="0">
            <Button x:Name="Count" FontSize="16" Content="Вычислить" Width="90" Height="25" Margin="0 20 0 2" Click="Count_Click"/>
            <Button x:Name="Clear" FontSize="16" Content="Очистить" Width="90" Height="25" Margin="0 10 0 10" Click="Clear_Click"/>
        </StackPanel>

        <WindowsFormsHost Grid.Column="1" HorizontalAlignment="Left"  VerticalAlignment="Top" Width="369" Height="255" Margin="10 0 0 0" Grid.Row="1">
            <charts:Chart x:Name="ChartPayments">
                <charts:Chart.Legends>

                </charts:Chart.Legends>
            </charts:Chart>
        </WindowsFormsHost>

    </Grid>
</Page>
